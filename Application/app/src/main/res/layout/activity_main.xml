<?xml version="1.0" encoding="utf-8"?>

<!-- android:layout_width="match_parent" == Take the width from the parent container-->
<!-- android:layout_width="wrap_content" == Take Width from the child -->
<!-- app:layout_constraintBottom_toBottomOf="parent" == Place my bottom to your bottom -->
<!-- app:layout_constraintHorizontal_bias="0.497"  Center , 0 = More Left, 1 = More Right in Container    -->



<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Welcome, Are you a Chef, Customer, or Admin?"
        android:fontFamily="cursive"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.157" />

    <Button
        android:id="@+id/customerButtonID"
        android:layout_width="196dp"
        android:layout_height="50dp"
        android:text="@string/customer"
        android:fontFamily="cursive"
        android:background="#00BD48"
        android:textColor="@android:color/white"
        android:bottomRightRadius="5dp"
        android:bottomLeftRadius="5dp"
        android:topLeftRadius="5dp"
        android:topRightRadius="5dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.387" />

    <Button
        android:id="@+id/chefButtonID"
        android:layout_width="172dp"
        android:layout_height="48dp"
        android:text="@string/chef"
        android:fontFamily="cursive"
        android:background="#00BD48"
        android:textColor="@android:color/white"
        android:bottomRightRadius="5dp"
        android:bottomLeftRadius="5dp"
        android:topLeftRadius="5dp"
        android:topRightRadius="5dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.499" />

    <Button
        android:id="@+id/adminButtonID"
        android:layout_width="172dp"
        android:layout_height="48dp"
        android:text="Admin"
        android:fontFamily="cursive"
        android:background="#00BD48"
        android:textColor="@android:color/white"
        android:bottomRightRadius="5dp"
        android:bottomLeftRadius="5dp"
        android:topLeftRadius="5dp"
        android:topRightRadius="5dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.600" />

</androidx.constraintlayout.widget.ConstraintLayout>